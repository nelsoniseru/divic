input BiometricInput {
  biometricKey: String!
}

input LoginInput {
  email: String!
  password: String!
}

type Mutation {
  biometric_login(BiometricInput: BiometricInput!): SignResponse!
  login(LoginInput: LoginInput!): SignResponse!
  register(RegisterInput: RegisterInput!): SignResponse!
}

type Query {
  profile: profileResponse!
}

input RegisterInput {
  email: String!
  password: String!
}

type SignResponse {
  token: String!
  user: User!
}

type User {
  email: String!
  id: Int!
  password: String!
}

type profileResponse {
  user: User!
}
